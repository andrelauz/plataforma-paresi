# Server Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=paresi_app
DB_PASSWORD=your_database_password_here
DB_NAME=paresi_platform

# JWT Configuration
JWT_SECRET=generate_a_secure_random_string_64_chars_here
JWT_EXPIRES_IN=7d

# URLs
FRONTEND_URL=http://plataforma.paresi.social
BACKEND_URL=http://plataforma.paresi.social/api

# Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://plataforma.paresi.social
